@{
    ViewData["Title"] = "Главная";
}


<p class="homepage-logo">igrocom.</p>


<div style="margin-left: 10%; margin-right:10%; text-align:center; margin-top:10px">

    @{
        if (ViewData["PopularGames"] != null)
        {
            if (ViewData.Values != null && ViewData.Values.Count() > 0)
            {
                <h1>Самые популярные игры: </h1>
                foreach (var item in ViewData["PopularGames"] as List<Game>)
                {

                    <div style="display:inline-block; text-align: center; margin-left: 10px;">
                        <a class="scale" href="@Url.Action("Details","Game",new {id = item.Id})" style="width: 500px; height: 281px;">
                            <img src="@Url.Action("GetImage", "Game", new { id = item.Id })" class="scale"
                                style="width:100%; height:100%; position: relative" />
                        </a>

                        <p style="game-name">@Html.DisplayFor(modelItem => item.Title)</p>
                    </div>
                }
            }
        }
    }


</div>