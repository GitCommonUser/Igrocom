@model IEnumerable<Igrocom.Models.Game>

@{
    ViewData["Title"] = "Игры";
}

<style>
    div {
        display: table;
    }

    div.t {
        display: table-cell;
        width: 100%;
    }

    div.t>input {
        width: 100%;
    }
</style>

<div class="container-games">
    <div class="horizontal-scrolling-items">

