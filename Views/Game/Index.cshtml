<div style="margin-left:25%; margin-top: 10px; margin-right: 25%; margin-inline: auto;">


    <nav class="navbar navbar-light">

        <form class="form-inline" asp-action="Index" method="get">
            <div style="width:500px;">
                <div class="t">
                    <input class="form-control mr-sm-2" type="search" placeholder="Поиск" aria-label="Search" name="searchString" value="@ViewData["CurrentFilter"]">
                </div>
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Найти</button>
            </div>
        </form>

    </nav>
</div>




<div style="margin-left: 15%; margin-right:15%; text-align:center; margin-top:10px">

    
    @foreach (var item in Model)
    {

        <div style="display:inline-block; text-align: center; margin-left: 10px;">
            <a class="scale" href="@Url.Action("Details","Game",new {id = item.Id})">
                <img src="@Url.Action("GetImage", "Game", new { id = item.Id })" class="scale"
                    style="width:100%; height:100%; position: relative" />
            </a>

            <p style="game-name">@Html.DisplayFor(modelItem => item.Title)</p>
        </div>
    }
</div>





