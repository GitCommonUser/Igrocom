@model Igrocom.Models.User

@{
    ViewData["Title"] = "Удаление пользователя";
}

<style>
    .grid-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        /* одна колонка */
    }

    .grid-item {
        /* стилизация блоков */
        margin-bottom: 20px;
        /* пример отступа между блоками */
    }

    .parent {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(4, 1fr);
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }

    .div1 {
        grid-area: 1 / 1 / 6 / 4;
    }

    .div2 {
        grid-area: 1 / 4 / 6 / 5;
    }


    .image-container {
        width: 100%;
        overflow-x: auto;
        white-space: nowrap;
        scroll-behavior: smooth;
        /* Добавляем плавную прокрутку (для современных браузеров) */
    }

    .image-container img {
        display: inline-block;
        width: 100%;
        height: 500px;
        margin-right: 10px;
    }

    .grid {
        display: grid;
        grid-template-columns: 30% 1fr 30%;
        align-items: start;
    }
</style>


<div class="grid" style="padding-top: 10px;">
 
    <div style="text-align: right; ">

    </div>

    <div style="margin-inline: auto;">

        <h1>Вы уверены, что хотите удалить пользователя @Html.DisplayFor(model => model.Login) ?</h1>
        <p>Это действие невозможно будет отменить.</p>


        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Подтвердить удаление" class="btn btn-danger" style="border-radius: 10px; height: 40px; width: 250px; font-size: 20px;" />

        </form>

        <div>
            <a asp-action="Index"><button class="menu-button" style="margin-top: 20px;">Отмена</button></a>
        </div>
    </div>

    <div>

    </div>
</div>