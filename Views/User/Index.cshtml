@model IEnumerable<Igrocom.Models.User>

@{
    ViewData["Title"] = "Пользователи";
}


<style>
    .grid-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        /* одна колонка */
    }

    .grid-item {
        /* стилизация блоков */
        margin-bottom: 20px;
        /* пример отступа между блоками */
    }

    .parent {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(4, 1fr);
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }

    .div1 {
        grid-area: 1 / 1 / 6 / 4;
    }

    .div2 {
        grid-area: 1 / 4 / 6 / 5;
    }


    .image-container {
        width: 100%;
        overflow-x: auto;
        white-space: nowrap;
        scroll-behavior: smooth;
        /* Добавляем плавную прокрутку (для современных браузеров) */
    }

    .image-container img {
        display: inline-block;
        width: 100%;
        height: 500px;
        margin-right: 10px;
    }

    .grid {
        display: grid;
        grid-template-columns: 30% 1fr 30%;
        align-items: start;
    }

    div {
        display: table;
    }

    div.t {
        display: table-cell;
        width: 100%;
    }

    div.t>input {
        width: 100%;
    }
</style>


<div class="grid" style="padding-top: 10px;">

    <div style="text-align: right; ">

    </div>

    <div style="margin-inline: auto;">

        <h1>Список пользователей</h1>



        <nav class="navbar navbar-light">
            <form class="form-inline" asp-action="Index" method="get">
                <div style="width:500px;">
                    <div class="t">
                        <input class="form-control mr-sm-2" type="search" placeholder="Поиск" aria-label="Search"
                            name="searchString" value="@ViewData["CurrentFilter"]">
                    </div>
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Найти</button>
                </div>
            </form>
        </nav>


        <table class="table">

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-top:15px; font-size: 20px;">
                            @Html.DisplayFor(modelItem => item.Login)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id"><button class="menu-button">Профиль</button></a>
                            <a asp-action="Edit" asp-route-id="@item.Id"><button class="menu-button">Редактировать</button></a> 
                            <a asp-action="Delete" asp-route-id="@item.Id"><button class="menu-button">Удалить</button></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>

    </div>
</div>